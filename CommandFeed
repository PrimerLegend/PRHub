package org.antihunger.mc.antihunger;

import org.bukkit.command.Command;
import org.bukkit.command.CommandExecutor;
import org.bukkit.command.CommandSender;
import org.bukkit.entity.Player;

import static org.antihunger.mc.antihunger.EventHunger.feed;

public class CommandFeed implements CommandExecutor {
    public AntiHunger plugin;
    public CommandFeed(AntiHunger plugin) {
        this.plugin = plugin;
    }


    @Override
    public boolean onCommand(CommandSender sender, Command command, String label, String[] args) {
        if(!(sender instanceof Player)){
            sender.sendMessage("§cOnly Players!");
            return true;
        }
        Player p = (Player)sender;
        if(!sender.hasPermission("antihunger.autofeed")){
            p.sendTitle("§cError", "§7You do not have permissions", 8, 10, 8);
            return true;
        }
        if (feed == false) {
            p.sendTitle("§aAntiHunger", "§aSuccessful Enabled!", 8, 15, 8);
            feed = true;
        }else if (feed == true) {
            p.sendTitle("§aAntiHunger", "§cSuccessful Disabled!", 8, 15, 8);
            feed = false;
        }
        return false;
    }
}
